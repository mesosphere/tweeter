{
  "id": "/tweeter",
  "cmd": "export KAFKA_BROKERS='broker.kafka.l4lb.thisdcos.directory:9092' && until rake cassandra:setup; do sleep 5; done && rails server --binding 0.0.0.0",
  "cpus": 0.25,
  "mem": 256,
  "disk": 0,
  "instances": 3,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/tweeter",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 0,
          "servicePort": 10000,
          "labels": {
            "VIP_0": "1.1.1.1:30000"
          }
        }
      ]
    }
  },
  "env": {
    "CASSANDRA_HOSTS": "node-0-server.cassandra.autoip.dcos.thisdcos.directory",
    "RAILS_ENV": "production",
    "SECRET_KEY_BASE": "be6ea21bd0e8ddad06accbdfbfcbc6f120815744a8177fb1196442c1670401c86a1d020f1fb62f9b7d6bacc8cf818de277d23d3f3e7dcf704ca88965e5b9ed86"
  },
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "portIndex": 0
    }
  ],
  "labels": {
    "HAPROXY_GROUP": "external"
  }
}
